<div>
  <h4>
      <%= link_to question.title, question_path(question) %>
  </h4>
  <% if current_user.present? %>
    <% if current_user.own?(question) %>
      <%= render 'crud_menus', question: question %>
    <% else %>
      <%= render 'bookmark_button', question: question %>
    <% end %>
  <% end %>
  <ul>
    <li>
      <%= icon 'far', 'user' %>
      <%= question.user.name %>
    </li>
      <%= icon 'far', 'calendar' %>
      <%= l question.created_at, format: :long %>
    </li>
  </ul>
  <p><%= question.body %></p>
</div>
